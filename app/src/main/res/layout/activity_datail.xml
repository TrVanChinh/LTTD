<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    tools:context=".Datail">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="346dp"
        android:layout_height="344dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/nenduoi" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="416dp"
        android:layout_height="232dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/anhamongus" />

    <TextView
        android:id="@+id/tvTengame"
        android:layout_width="304dp"
        android:layout_height="101dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Amoung Us"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tvChitiet"
        android:layout_width="362dp"
        android:layout_height="79dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Tham gia phi đoàn của bạn trong một trò chơi nhiều người làm việc theo nhóm và phản bội!"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTengame" />

    <TextView
        android:id="@+id/tvDungluong"
        android:layout_width="84dp"
        android:layout_height="62dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="124dp"
        android:text="Dung lượng"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTengame" />

    <TextView
        android:id="@+id/tvdanhgia"
        android:layout_width="37dp"
        android:layout_height="59dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="136dp"
        android:gravity="right|left"
        android:text="Đánh giá"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTengame" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvdanhgia"
        app:layout_constraintTop_toTopOf="@+id/tvChitiet"
        app:srcCompat="@drawable/ic_baseline_star_24" />

    <Button
        android:id="@+id/btnTai"
        android:layout_width="157dp"
        android:layout_height="56dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:text="Tải Game"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>