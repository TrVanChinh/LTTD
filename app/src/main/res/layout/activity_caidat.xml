<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:background="@drawable/caidat_bgr">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/img_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cài đặt"
            android:textColor="@color/black"
            android:textSize="48dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_mode"
            android:layout_weight="1"
            />
        <Switch
            android:id="@+id/switch_chedo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chế độ tối"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_weight="1"
            android:padding="16dp"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="137dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_chuong"
            android:layout_weight="1"
            />
        <Switch
            android:id="@+id/switch_amthanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_weight="1"
            android:padding="16dp"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="137dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/nhac" />
        <Switch
            android:id="@+id/switch_thongbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Âm thanh"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_weight="1"
            android:padding="16dp"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="137dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_speaker" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Âm Lượng"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_weight="1"
                android:padding="16dp"
                 />
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="252dp"
            android:layout_height="45dp"
            android:progressDrawable="@drawable/custom_progress_bg"
            android:thumb="@drawable/custom_thumb"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="673dp" />

    </LinearLayout>


</LinearLayout>