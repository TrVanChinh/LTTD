<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/img_avatar_cate"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_launcher_background" />
        <TextView
            android:id="@+id/tv_Categary"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/img_avatar_cate"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:text="Category"/>
        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/img_avatar_cate"
            android:layout_below="@+id/tv_Categary"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:text="Số từ:"/>
        <TextView
            android:id="@+id/tv_sotu"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/a"
            android:layout_below="@+id/tv_Categary"
            android:layout_height="wrap_content"
            android:paddingStart="3dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:text="Category"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sotu"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/img_avatar_cate" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>