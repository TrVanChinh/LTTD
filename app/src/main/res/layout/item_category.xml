<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/game_card_1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="5dp"
    android:layout_marginHorizontal="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar_cate"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_Categary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_toEndOf="@+id/img_avatar_cate"
            android:fontFamily="@font/roboto"
            android:paddingStart="10dp"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/img_avatar_cate"
            android:layout_below="@+id/tv_Categary"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:text="Số từ:"/>

        <TextView
            android:id="@+id/tv_sotu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Categary"
            android:layout_toEndOf="@+id/a"
            android:fontFamily="@font/roboto"
            android:paddingStart="3dp"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="12sp" />

