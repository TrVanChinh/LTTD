<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BAE7F4"
    android:orientation="vertical"
    tools:context=".GameXepChu">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cvback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="250dp"
                android:layout_marginLeft="7dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginTop="7dp"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/previous"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvhdg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="250dp"
                android:layout_marginRight="7dp"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginTop="7dp"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/guild"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardCornerRadius="250dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:foreground="?attr/selectableItemBackground"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:padding="5dp"
                android:src="@drawable/speaker"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvNghiaG2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_ _ _ _ _"
            android:layout_marginTop="50dp"
            android:layout_centerInParent="true"
            android:paddingVertical="10dp"
            android:textSize="30dp"
            android:textColor="@color/black"/>
    </RelativeLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="#E7FF90"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvdapan"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:nestedScrollingEnabled="false"
            android:layout_height="130dp"
            />
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvrefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="250dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="30dp"
            app:cardElevation="0dp"
            android:backgroundTint="#75FFFFFF"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/refresh" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvtip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="250dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            app:cardElevation="0dp"
            android:backgroundTint="#94FFFFFF"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tip" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/txtGoiy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:letterSpacing="0.5"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lvtukhoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:paddingHorizontal="10dp"

        android:layout_gravity="center"
        android:layout_marginTop="150dp"/>
</LinearLayout>